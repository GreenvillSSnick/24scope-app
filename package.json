{
  "name": "24scope-electron",
  "version": "1.0.0",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "axios": "^1.12.2",
    "node-nowplaying": "^0.1.0",
    "node-nowplaying-darwin-universal": "^0.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^26.6.10",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "build/icons",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "build/icons",
      "target": ["nsis", "zip"]
    },
    "linux": {
      "icon": "build/icons",
      "target": ["AppImage", "deb"]
    },
    "files": [
      "**/*"
    ]
  }
}
