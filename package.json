{
  "name": "24Scope",
  "version": "1.0.0",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dist": "npx electron-builder --mac --win --linux",
    "dist:win": "npx electron-builder --win"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "axios": "^1.12.2",
    "custom-electron-titlebar": "^4.2.8",
    "electron": "^39.1.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "app-builder-bin": "^5.0.0-alpha.12",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "build/icons",
      "target": [
        "dmg"
      ],
      "sign": false,
      "hardenedRuntime": false
    },
    "win": {
      "icon": "build/icons",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "dmg": {
      "icon": "build/icons/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*"
    ]
  }
}
